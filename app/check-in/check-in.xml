<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">   
  
  <TabView>
    <TabView.items>
     <TabViewItem title="Check In!">
        <TabViewItem.view>
          <ListView items="{{ beaconsCheckIn }}" >
            <ListView.itemTemplate>
              <GridLayout columns="auto,auto" rows="auto">
                  <Image src="~/images/beacon_linear@2x.png" stretch ="none" col="0" />
                  <StackLayout col="1">
                    <Label text="{{ identifier }}" textWrap="true" class="title"/>
                  </StackLayout>
              </GridLayout>
            </ListView.itemTemplate>
          </ListView>
        </TabViewItem.view>
     </TabViewItem>
   </TabView.items>
 </TabView>
</Page>
